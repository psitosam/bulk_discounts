<h1>Discount Edit</h1>
<%= form_with model: @bulk_discount, url: merchant_bulk_discount_path(@merchant.id, @bulk_discount.id), method: :patch, local: true do |f| %>
  <%= f.label :percent %>
  <%= f.text_field :percent, value: @bulk_discount.percent %>
  <%= f.label :threshold %>
  <%= f.text_field :threshold, value: @bulk_discount.threshold %>
  <%= f.submit "Submit" %>
<% end %>
