<h1>Discount Edit</h1>
<%= form_with model: @bulk_discount, url: "/merchant/#{@merchant.id}/bulk_discounts/#{@bulk_discount.id}", method: :put, local: true do |f| %>
  <%= f.label :percent %>
  <%= f.text_field :percent, value: @bulk_discount.percent %>
  <%= f.label :threshold %>
  <%= f.text_field :threshold, value: @bulk_discount.threshold %>
  <%= f.submit "Submit" %>
<% end %>
